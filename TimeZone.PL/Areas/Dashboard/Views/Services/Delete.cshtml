@model  ServiceVM
@section Header{
    Delete Service
}

<div class="col-md-12">

    <div class="card  card-danger">
        <div class="card-header">
            <h3 class="card-title">Details confirmation</h3>
        </div>

     <div class="card-body">
         <p>Are You Sure to want Deleted @Model.Name servises</p>
     </div>  

     <div class="card-footer">
         <form asp-controller="Services" asp-action="Delete">
             <input  type="hidden" asp-for="Id"/>
             <button type="submit" class="btn btn-danger"> Delete</button>
             <a class="btn btn-secondary " asp-controller="Services" asp-action="Index">Cancel</a>
         </form>
     </div>
    </div>

</div>
